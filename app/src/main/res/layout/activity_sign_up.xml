<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_icon"
            android:src="@drawable/user_icon"
            android:scaleType="fitXY"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/e_text_bg"
            android:hint="@string/sign_in_name"
            android:paddingHorizontal="10dp"
            android:id="@+id/et_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_icon"
            android:src="@drawable/user_icon"
            android:scaleType="fitXY"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/e_text_bg"
            android:hint="@string/sign_in_lastname"
            android:paddingHorizontal="10dp"
            android:id="@+id/et_last_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_icon"
            android:src="@drawable/email_icon"
            android:scaleType="fitXY"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/e_text_bg"
            android:hint="@string/sign_in_email"
            android:paddingHorizontal="10dp"
            android:id="@+id/et_email"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_icon"
            android:src="@drawable/password_logo"
            android:scaleType="fitXY"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/e_text_bg"
            android:hint="@string/sign_in_password"
            android:paddingHorizontal="10dp"
            android:inputType="textPassword"
            android:id="@+id/et_password"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_icon"
            android:src="@drawable/password_logo"
            android:scaleType="fitXY"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/e_text_bg"
            android:hint="@string/sign_in_confirmpassword"
            android:paddingHorizontal="10dp"
            android:inputType="textPassword"
            android:id="@+id/et_cpassword"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/botones"
        android:text="@string/sign_in_next"
        android:textAllCaps="false"
        android:id="@+id/btn_next"/>

</LinearLayout>