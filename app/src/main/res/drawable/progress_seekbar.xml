<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Background-->
    <item>
        <shape>
            <corners android:radius="5dp"></corners>
            <solid android:color="#111"></solid>
        </shape>
    </item>

    <!--Secondary progress-->
    <item>
        <clip>
            <shape>
                <corners android:radius="5dp"></corners>
                <solid android:color="#444"></solid>
            </shape>
        </clip>
    </item>

    <!--Progress-->
    <item>
        <clip>
            <shape>
                <corners android:radius="5dp"></corners>
                <solid android:color="#888"></solid>
            </shape>
        </clip>
    </item>

</layer-list>